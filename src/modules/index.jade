doctype html

html(ng-app="arm", ng-cloak, ng-strict-di)
    head
        title Мобильное АРМ
        base(href="/")
        meta(charset='utf-8')
        meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0")
        meta(name="theme-color", content="#ac1a27")
        link(rel="stylesheet", href="/css/vendor.css", type="text/css")
        link(rel="stylesheet", href="/css/styles.css", type="text/css")
        link(rel="icon", type="image/png", href="/images/favicon.ico")

    body(ng-class = "$state.current.name|expandState")
        main(ui-view)

        script(type="text/javascript").
            var CONFIG = !{ JSON.stringify(config) };

        script(type='text/javascript', src='//maps.googleapis.com/maps/api/js?sensor=false')
        script(type='text/javascript', src='/js/vendor.js')
        script(type='text/javascript', src='/js/all.js')
        
