.col-md-6.col-lg-4.col-md-offset-3.col-lg-offset-4

    .signin-container.well
        .signin-header
            .incerts
                h2 Arm

        .signin-form
            form(ng-submit='self.signUp(self.credentials)')
                .form-group
                    input.form-control(ng-model = 'self.credentials.username', type='text', placeholder='Username')
                .form-group
                    input.form-control(ng-model = 'self.credentials.password', type='password', placeholder='Password')
                .form-group
                    input.form-control(ng-model = 'self.credentials.password_check', type='password', placeholder='Confirm Password')

                .form-actions
                    button.btn.btn-primary(type='submit') Sign In